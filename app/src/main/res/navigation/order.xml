<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_orders"
    app:startDestination="@id/ordersFragment">

    <fragment
        android:id="@+id/ordersFragment"
        android:name="kz.noxiq.chocoexpress.ui.orders.OrdersFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_orders">

        <action
            android:id="@+id/action_ordersFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />

        <action
            android:id="@+id/action_ordersFragment_to_registration"
            app:destination="@id/login" />
    </fragment>

    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="kz.noxiq.chocoexpress.ui.orders.order_details.OrderDetailsFragment"
        android:label="OrderDetailsFragment"
        tools:layout="@layout/fragment_order_details" />

    <include app:graph="@navigation/login" />

</navigation>